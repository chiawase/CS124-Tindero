<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tindero.tindero.prof"
    tools:showIn="@layout/app_bar_prof"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Juan De La Cruz"
        android:id="@+id/tvProfileName"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="EMPLOYER"
        android:id="@+id/tvProfileUserType"
        android:layout_below="@+id/tvProfileName"
        android:layout_alignStart="@+id/tvProfileName"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Number:"
        android:textColor="#000000"
        android:id="@+id/tvContactNumber"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/tvProfileUserType"
        android:layout_marginBottom="39dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="09178286689"
        android:id="@+id/tvProfileContact"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/tvContactNumber" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:background="@drawable/defaulter"
        android:layout_alignTop="@+id/tvProfileName"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginEnd="25dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="S E T T I N G S"
        android:id="@+id/tSettings"
        android:background="#448ccb"
        android:paddingTop = "10dp"
        android:paddingLeft="25dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@+id/tvProfileSkills"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Turn off notifications"
        android:id="@+id/textView7"
        android:paddingTop = "3dp"
        android:paddingLeft="25dp"
        android:layout_below="@+id/tSettings"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:onClick="turnOffNotifications"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edit Profile"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:onClick="editProfile"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log Out"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="20dp"
        android:onClick="logOut"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Skills"
        android:textColor="#000000"
        android:id="@+id/tvProfileSkills"
        android:layout_below="@+id/tvProfileContact"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Skills List"
        android:id="@+id/tvProfileSkillsList"
        android:layout_alignBaseline="@+id/tvProfileSkills"
        android:layout_alignBottom="@+id/tvProfileSkills"
        android:layout_toEndOf="@+id/tvProfileSkills"
        android:layout_marginStart="18dp" />

</RelativeLayout>
